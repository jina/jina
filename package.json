{
	"name": "jina",
	"type": "module",
	"private": true,
	"scripts": {
		"format": "wireit",
		"format:eslint": "wireit",
		"format:markdownlint": "wireit",
		"format:prettier": "wireit"
	},
	"devDependencies": {
		"@eslint/js": "^9.30.0",
		"@eslint/json": "^0.12.0",
		"@eslint/markdown": "^6.6.0",
		"@ianvs/prettier-plugin-sort-imports": "^4.4.2",
		"eslint": "^9.30.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-html": "^8.1.3",
		"eslint-plugin-only-warn": "^1.1.0",
		"eslint-plugin-yml": "^1.18.0",
		"globals": "^16.2.0",
		"markdownlint": "^0.38.0",
		"markdownlint-cli2": "^0.18.1",
		"prettier": "^3.6.2",
		"prettier-plugin-pkg": "^0.21.1",
		"prettier-plugin-sort-json": "^4.1.1",
		"wireit": "^0.14.12"
	},
	"wireit": {
		"format:prettier": {
			"command": "npx prettier . --cache --write",
			"files": [
				"**/*.{js,json,md,yaml,yml}",
				".editorconfig",
				"LICENSE"
			]
		},
		"format:eslint": {
			"command": "npx eslint . --cache --fix",
			"dependencies": [
				"format:prettier"
			],
			"files": [
				"**/*.{js,json,md,yaml,yml}"
			],
			"output": [
				".eslintcache"
			]
		},
		"format:markdownlint": {
			"command": "npx markdownlint-cli2 '**/*.md' --fix",
			"dependencies": [
				"format:prettier"
			],
			"files": [
				"**/*.md",
				".gitignore",
				".markdownlint-cli2.yaml"
			]
		},
		"format": {
			"command": "echo 'Formatting...'",
			"dependencies": [
				"format:eslint",
				"format:markdownlint",
				"format:prettier"
			]
		}
	}
}
